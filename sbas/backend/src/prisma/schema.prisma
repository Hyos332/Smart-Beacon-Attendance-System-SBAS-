generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id    String   @id @default(uuid()) // <-- CAMBIA Int a String y usa uuid()
  name  String
  email String  @unique
  attendances Attendance[]
}

model Attendance {
  id        String   @id @default(uuid())
  studentId String
  beaconId  String
  timestamp DateTime
  Student   Student  @relation(fields: [studentId], references: [id])
  Beacon    Beacon   @relation("BeaconToAttendance", fields: [beaconId], references: [id]) // AGREGA EL NOMBRE
}

model Beacon {
  id        String        @id @default(uuid())
  uuid      String        @unique
  classroom String
  attendances Attendance[] @relation("BeaconToAttendance") // MISMO NOMBRE
}
